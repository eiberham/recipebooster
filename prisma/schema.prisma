generator client {
  provider        = "prisma-client-js"
  output          = "../generated/prisma"
  moduleFormat    = "cjs"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String        @id @default(uuid())
  email            String        @unique
  name             String
  username         String        @unique
  password         String
  stripeCustomerId String        @map("stripe_customer_id") @default("")
  createdAt        DateTime      @default(now()) @map("created_at")
  updatedAt        DateTime?     @default(now()) @map("updated_at")
  preferences      Json          @default("{}")
  recipes          Recipe[] // A user can have multiple recipes
  roles            UserRole[] // A user can have multiple roles through UserRole
  subscription     Subscription?
  refreshTokens   RefreshToken[]

  @@map("user")
}

model Recipe {
  id          String             @id @default(uuid())
  name        String
  description String
  steps       String
  imageUrl    String?            @map("image_url")
  userId      String             @map("user_id")
  createdAt   DateTime           @default(now()) @map("created_at")
  updatedAt   DateTime           @default(now()) @map("updated_at")
  user        User               @relation(fields: [userId], references: [id]) // Many recipes belong to one user
  ingredients RecipeIngredient[] // A recipe can have multiple ingredients through RecipeIngredient

  @@map("recipe")
}

model Ingredient {
  id                String             @id @default(uuid())
  name              String
  recipeIngredients RecipeIngredient[] // An ingredient can be used in multiple recipes through RecipeIngredient

  @@map("ingredient")
}

model RecipeIngredient {
  id           String             @id @default(uuid())
  recipeId     String             @map("recipe_id")
  ingredientId String             @map("ingredient_id")
  quantity     Int?
  unit         String?
  recipe       Recipe     @relation(fields: [recipeId], references: [id])
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id])

  @@map("recipe_ingredient")
}

model Role {
  id        String        @id @default(uuid())
  name      String     @unique
  userRoles UserRole[]

  @@map("role")
}

model UserRole {
  id     String  @id @default(uuid())
  userId String  @map("user_id")
  roleId String  @map("role_id")
  user   User @relation(fields: [userId], references: [id])
  role   Role @relation(fields: [roleId], references: [id])

  @@map("user_role")
}

model Plan {
  id            String            @id @default(uuid())
  name          String         @unique
  price         Int
  currency      String
  stripePriceId String?        @map("stripe_price_id")
  features      Json?
  createdAt     DateTime       @default(now()) @map("created_at")
  subscriptions Subscription[]

  @@map("plan")
}

model Subscription {
  id     String @id @default(uuid())
  userId String @unique @map("user_id")
  planId String @map("plan_id")

  status               String?
  stripeSubscriptionId String?   @map("stripe_subscription_id")
  currentPeriodEnd     DateTime? @map("current_period_end")

  createdAt  DateTime  @default(now()) @map("created_at")
  canceledAt DateTime? @map("canceled_at")
  interval   String?   // 'month' or 'year'
  user       User      @relation(fields: [userId], references: [id])
  plan       Plan      @relation(fields: [planId], references: [id])

  @@map("subscription")
}

model RefreshToken {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  token      String   @unique
  deviceId   String   @map("device_id")
  deviceType String?  @map("device_type")
  deviceName String?  @map("device_name")
  expiresAt  DateTime @map("expires_at")
  createdAt  DateTime @default(now()) @map("created_at")
  user       User     @relation(fields: [userId], references: [id])

  @@unique([userId, deviceId])
  @@map("refresh_token")
}
